{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noResolve": false,
    "outDir": "build",
    "removeComments": true,
    "rootDir": "src/ts",
    "sourceMap": false,
    "target": "es2016",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "bower_components",
    "node_modules",
    "typings/browser",
    "typings/browser.d.ts"
  ]
}